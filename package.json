{
  "publisher": "kkopite",
  "name": "vscode-tip",
  "displayName": "VS Code Tip",
  "version": "0.0.3",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "description": "",
  "author": "kkopite <kkopitehong@foxmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/action-hong/vscode-tip#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/action-hong/vscode-tip"
  },
  "bugs": {
    "url": "https://github.com/action-hong/vscode-tip/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.84.1"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": {
      "command": "tip.hideStatusItem",
      "title": "hide status item",
      "category": "tip"
    },
    "configuration": {
      "title": "Daily Tip",
      "properties": {
        "tip.showTime": {
          "type": "boolean",
          "default": false,
          "description": "Show timer in alert"
        },
        "tip.timeFormat": {
          "type": "string",
          "default": "YYYY MM DD HH:mm:ss",
          "description": "Time format"
        },
        "tip.tips": {
          "type": "array",
          "description": "Config list tips",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "info",
                  "warning",
                  "error",
                  "status"
                ]
              },
              "cron": {
                "type": "string",
                "required": true,
                "description": "cron expression"
              },
              "message": {
                "type": "string",
                "required": true
              },
              "color": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "dependencies": {
    "add": "^2.0.6",
    "croner": "^7.0.5",
    "dayjs": "^1.11.10"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.1.1",
    "@antfu/ni": "^0.21.9",
    "@types/node": "^20.9.0",
    "@types/vscode": "^1.84.1",
    "@vscode/vsce": "^2.22.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.54.0",
    "esno": "^4.0.0",
    "pnpm": "^8.10.5",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
